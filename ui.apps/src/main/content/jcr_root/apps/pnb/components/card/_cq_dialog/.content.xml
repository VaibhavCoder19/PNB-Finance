<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,core.wcm.components.page.v3.editor,cq.wcm.msm.properties,granite.contexthub.configuration,cq.siteadmin.admin.properties,core.wcm.components.image.v3.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_page_v3"
    mode="edit"
    trackingFeature="core-components:page:v3">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                granite:class="cq-siteadmin-admin-properties-tabs"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                    <image_x0020_details
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image Details"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Image and Details"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                name="./image/sling:resourceType"
                                                value="core/wcm/components/image/v3/image"/>
                                            <file
                                                granite:class="cmp-image__editor-file-upload"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowDrop="{Boolean}false"
                                                allowUpload="{Boolean}true"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Used in components referencing the page (e.g. teaser, list of pages)"
                                                fieldLabel="Image"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./image/fileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./image/featuredimage"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </image>
                                    <titlehead
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Image Title"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Image Title"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                name="./imagetitle"/>
                                        </items>
                                    </titlehead>
                                    <description
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Image Description"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <desc
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Image Description"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                name="./imagedesc"/>
                                        </items>
                                    </description>
                                    <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./items">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linkurl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Select Link Path"
                                                fieldLabel="Link Url"
                                                name="./linkUrl"/>
                                        </items>
                                    </field>
                                </items>
                            </column>
                        </items>
                    </image_x0020_details>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
